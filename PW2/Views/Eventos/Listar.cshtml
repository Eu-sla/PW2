@model IEnumerable<PW2.Models.Evento>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Local)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Local)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = Model.ToList<PW2.Models.Evento>().IndexOf(item) }) |
            @Html.ActionLink("Detalhes", "Exibir", new {  id = Model.ToList<PW2.Models.Evento>().IndexOf(item) }) |
            @Html.ActionLink("Deletar", "Delete", new { id = Model.ToList<PW2.Models.Evento>().IndexOf(item) })
        </td>
    </tr>
}

</table>
